{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "rootDir": "./backend/src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["backend/src/**/*"],
    "exclude": ["node_modules", "dist"]
}
